<h1>Screens</h1>

<table width="100%">
  <tr>
    <th>Name</th>
    <th></th>
  </tr>

<% @screens.each do |screen| %>
  <tr class="<%= cycle("even", "odd") %>">
    <td><%= link_to screen.name, edit_screen_path(screen) %></td>
    <td><%= link_to 'Delete', screen, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Screen', new_screen_path %>
