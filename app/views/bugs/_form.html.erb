<%= form_for(@bug) do |f| %>
  <% if @bug.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@bug.errors.count, "error") %> prohibited this bug from being saved:</h2>

      <ul>
      <% @bug.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :title %>:
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.label :description %>:
    <%= f.text_area :description %>
  </div>
  <div class="field">
    <%= f.label :found %>:
    <%= f.date_select :found %>
  </div>
  <div class="field">
    <%= f.label 'Screen' %>:
    <%= f.collection_select(:screen_id, Screen.all, :id, :name) %>
  </div>
  <div class="field">
    <%= f.label :priority %>:
    <%= f.select :priority, options_for_select(['Critical','High','Medium','Low']) %>
  </div>
  <div class="field">
    <%= f.label :resolved %>:
    <%= f.check_box :resolved %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
