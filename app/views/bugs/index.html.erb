<h1>Listing bugs</h1>

<table>
  <tr>
    <th>Title</th>
    <th>Found</th>
    <th>Screen</th>
    <th>Resolved</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @bugs.each do |bug| %>
  <tr>
    <td><%= bug.title %></td>
    <td><%= bug.found %></td>
    <td><%= bug.screen.title %></td>
    <td><%= bug.resolved %></td>
    <td><%= link_to 'Show', bug %></td>
    <td><%= link_to 'Edit', edit_bug_path(bug) %></td>
    <td><%= link_to 'Destroy', bug, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

